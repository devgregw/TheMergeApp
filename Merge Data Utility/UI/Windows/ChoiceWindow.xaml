<Window x:Class="Merge_Data_Utility.UI.Windows.ChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Merge_Data_Utility.UI.Windows"
        mc:Ignorable="d"
        Icon="/Merge Data Utility;component/shadow-64.png" Title="Choices" Height="500" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <ScrollViewer Background="White" VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="list" VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <TextBlock FontSize="34" FontWeight="Light" TextAlignment="Center" Margin="0,0,0,5">Select an option.</TextBlock>
            <TextBlock x:Name="message" Margin="10,0,10,5" TextAlignment="Center" TextWrapping="Wrap">Description</TextBlock>
        </StackPanel>
    </ScrollViewer>
</Window>