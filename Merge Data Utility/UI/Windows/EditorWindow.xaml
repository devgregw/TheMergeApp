<Window x:Class="Merge_Data_Utility.UI.Windows.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Merge_Data_Utility.UI.Windows"
        mc:Ignorable="d"
        xmlns:other="clr-namespace:Merge_Data_Utility.UI.Controls.Other"
        Icon="/Merge Data Utility;component/shadow-64.png" Title="Editor" Height="650" Width="700" MinHeight="500" MinWidth="500" ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu VerticalAlignment="Top" x:Name="menu">
            <Button FontSize="18" Click="Publish_OnClick">Publish</Button>
            <Button x:Name="draftButton" Click="Draft_OnClick">Save as Draft</Button>
        </Menu>
        <other:ContentControl x:Name="content">
            <Frame x:Name="frame" Margin="0,30,0,0" NavigationUIVisibility="Hidden" />
        </other:ContentControl>
    </Grid>
</Window>