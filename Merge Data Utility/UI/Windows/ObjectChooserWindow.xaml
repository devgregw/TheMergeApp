<Window x:Class="Merge_Data_Utility.UI.Windows.ObjectChooserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Merge_Data_Utility.UI.Windows"
        xmlns:other="clr-namespace:Merge_Data_Utility.UI.Controls.Other"
        mc:Ignorable="d"
        Icon="/Merge Data Utility;component/shadow-64.png" Title="Object Chooser" Height="500" Width="500" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <other:ContentControl x:Name="cc" Margin="0,0,0,22">
            <ListView x:Name="list" />
        </other:ContentControl>
        <Grid Height="22" VerticalAlignment="Bottom"
              Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,1,0"
                        Orientation="Horizontal">
                <Button Margin="0,0,5,0" IsCancel="True" Click="Cancel">Cancel</Button>
                <Button IsDefault="True" Click="Choose">Choose</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>