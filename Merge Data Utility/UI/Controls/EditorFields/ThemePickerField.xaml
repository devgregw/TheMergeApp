<UserControl x:Class="Merge_Data_Utility.UI.Controls.EditorFields.ThemePickerField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Merge_Data_Utility.UI.Controls.EditorFields"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <ComboBox x:Name="themeBox" HorizontalAlignment="Left" Width="200" SelectionChanged="ThemePicked">
            <ComboBoxItem Content="Auto" />
            <ComboBoxItem Content="Light" />
            <ComboBoxItem Content="Dark" />
        </ComboBox>
    </Grid>
</UserControl>