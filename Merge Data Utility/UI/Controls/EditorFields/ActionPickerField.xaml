<UserControl x:Class="Merge_Data_Utility.UI.Controls.EditorFields.ActionPickerField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Merge_Data_Utility.UI.Controls.EditorFields"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid Background="White" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="box" Grid.Column="0" IsReadOnly="True" />
        <Button Grid.Column="2" Click="Configure">Configure</Button>
        <Button Grid.Column="4" Click="Clear">Clear</Button>
        <Button Grid.Column="6" Click="Reset">Reset</Button>
        <Button x:Name="viewCodeButton"  Grid.Column="7" Click="ViewCode" Margin="5,0,0,0">View Code</Button>
    </Grid>
</UserControl>