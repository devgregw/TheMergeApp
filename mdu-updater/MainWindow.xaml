<Window x:Class="mdu_updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mdu_updater"
        mc:Ignorable="d"
        Title="Merge Data Utility Updater" Height="500" Width="525" Icon="shadow-64.png"
        WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-138,0,0">
            <Image Source="/mdu-updater;component/shadow-512.png" Height="128" Width="128" VerticalAlignment="Top"
                   HorizontalAlignment="Center" Margin="0,0,0,10" />
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock FontSize="34" FontWeight="Light" TextAlignment="Center">Update in progress.</TextBlock>
                <TextBlock x:Name="status" TextAlignment="Center" TextWrapping="Wrap" Margin="0,5,0,5">Preparing...</TextBlock>
                <ProgressBar x:Name="progress" IsIndeterminate="True" Height="25" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>